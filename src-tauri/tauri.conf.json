{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pdfova",
  "version": "0.3.3",
  "identifier": "com.tamert.pdfova",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pdfova",
        "width": 800,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37",
          "libjavascriptcoregtk-4.1-0 | libjavascriptcoregtk-4.0-18",
          "libgtk-3-0",
          "libappindicator3-1 | libayatana-appindicator3-1"
        ]
      }
    },
    "category": "Productivity",
    "shortDescription": "Simple and powerful PDF & Image tools",
    "longDescription": "A modern desktop application for PDF merging, splitting, compression, and image batch processing. Built for speed and privacy."
  }
}